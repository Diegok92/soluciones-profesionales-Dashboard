<!DOCTYPE html>
<html lang="en">

<head>

  <%- include("partials/head-no-css") %>

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/theme.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/css/tablet.css" />
    <link rel="stylesheet" href="/css/tablet-index.css" />
    <link rel="stylesheet" href="/css/desktop-index.css" />
    <link rel="stylesheet" href="/css/desktop-login.css" />
    <title>Soluciones Profesionales</title>
</head>

<body>

  <%- include("partials/header") %>
    <%- include("partials/nav-bar") %>

      <main>

        <% if(locals.errors !=undefined){ %>
          <h4 style="text-align: center;">Errores BackEnd</h4>
          <% for(let i=0; i<errors.length; i++){ %>
            <ul>
              <li class="errors">
                <%= errors[i].msg %>
              </li>
            </ul>
            <% } %>
              <% } %>
                <form action="/login" method="POST" class="form-login">
                  <div class="username">
                    <label for="email">Email:</label>
                    <input type="email" name="email" id="email">
                  </div>
                  <div class="password">
                    <label for="password">Contraseña:</label>
                    <input type="password" name="password" id="password">
                  </div>
                  <div class="login-button">
                    <button type="submit">Enviar</button>
                  </div>
                </form>
                <div class="password-forgotten">
                  <a href="">¿Olvidaste la Contraseña?</a>
                </div>

                <%- include("partials/ad-bottom-body") %>

      </main>

      <%- include("partials/footer") %>

</body>

</html>